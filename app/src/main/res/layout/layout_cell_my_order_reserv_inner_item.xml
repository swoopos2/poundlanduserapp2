<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_1sdp">

                <TextView
                    android:id="@+id/tv_sr_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="start"
                    android:paddingStart="@dimen/_20sdp"
                    android:text="S.No."
                    android:textAllCaps="true"
                    android:textColor="@color/hint_grey"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_app_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="end"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="Product Name"
                        android:textColor="@color/hint_grey"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:textColor="@color/app_header_color"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="end"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/amount"
                        android:textColor="@color/hint_grey"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:textAllCaps="true"
                        android:textColor="@color/app_header_color"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="end"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/quantity"
                        android:textColor="@color/hint_grey"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:textAllCaps="true"
                        android:textColor="@color/app_header_color"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Order Status"
                        android:textAllCaps="true"
                        android:textColor="@color/color_light_red_extra"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/tv_placed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_header_color"
                            android:checked="true"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/placed"
                            android:textColor="@color/app_header_color"
                            android:textSize="@dimen/_8sdp" />

                        <View
                            android:id="@+id/div_placed"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="3dp"
                            android:background="@drawable/dotted_line"
                            android:layerType="software"
                            android:visibility="gone"/>

                        <CheckBox
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_header_color"
                            android:checked="false"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Being prepared"
                            android:textColor="@color/hint_grey"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone"/>

                        <View
                            android:id="@+id/div_progress"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="2dp"
                            android:background="@drawable/dotted_line"
                            android:layerType="software"
                            android:visibility="gone"/>

                        <CheckBox
                            android:id="@+id/tv_dispatch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_header_color"
                            android:checked="false"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/dispatch"
                            android:textColor="@color/hint_grey"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone"/>

                        <View
                            android:id="@+id/div_dispatch"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="2dp"
                            android:background="@drawable/dotted_line"
                            android:layerType="software"
                            android:visibility="gone"/>

                        <CheckBox
                            android:id="@+id/tv_served"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_header_color"
                            android:checked="false"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/served"
                            android:textColor="@color/hint_grey"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone"/>


                        <CheckBox
                            android:id="@+id/tv_rejected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_header_color"
                            android:checked="false"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/Rejected"
                            android:textColor="@color/hint_grey"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_order_status_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Your Order is placed"
                        android:textAllCaps="true"
                        android:textColor="@color/color_light_red_extra"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:id="@+id/ll_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:padding="@dimen/_1sdp">

                        <TextView
                            android:id="@+id/tv_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/red_filled_4dp_rect"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            android:text="Review"
                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_reorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/tv_review"
                            android:background="@drawable/white_filled_4dp_rect"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            android:text="@string/reorder"
                            android:textAllCaps="true"
                            android:textColor="@color/color_light_red_extra"
                            android:textSize="@dimen/_9sdp" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:alpha=".7"
                android:background="@drawable/dotted_line"
                android:layerType="software" />

        </LinearLayout>

    </LinearLayout>
    <!-- <View
         android:id="@+id/v_div"
         android:layout_width="match_parent"
         android:layout_height="3dp"
         android:layout_below="@+id/cv_my_bag"
         android:alpha=".7"
         android:background="@drawable/dotted_line"
         android:layerType="software" />-->
</layout>