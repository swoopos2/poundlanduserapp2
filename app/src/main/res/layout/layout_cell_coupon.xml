<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:minHeight="@dimen/_90sdp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/_1sdp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_venue_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:padding="@dimen/_2sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_app_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".3"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_coupon_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:background="@drawable/app_colored_filled_rect_100"
                        android:maxLines="1"
                        android:text=""
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_coupon_code"
                        android:textColor="@color/dark_grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_shop_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_info"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/blue_rect_border_drawable"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:text="@string/apply_coupon"
                        android:textAllCaps="true"
                        android:textColor="@color/app_header_color"
                        android:textSize="@dimen/_11sdp" />


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- <View
                                android:id="@+id/v_div"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_below="@+id/tv_distance"
                                android:alpha=".7"
                                android:background="@drawable/dotted_line"
                                android:layerType="software" />-->

    </androidx.cardview.widget.CardView>
</layout>