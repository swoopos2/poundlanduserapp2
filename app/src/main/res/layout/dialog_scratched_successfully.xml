<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_25sdp"
        app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/tv_cancel"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/color_light_red" />

                    <TextView
                        android:id="@+id/tv_yay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cancel"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/yay"
                        android:textAllCaps="false"
                        android:textColor="@color/app_header_color"
                        android:textSize="@dimen/_30sdp" />

                    <ImageView
                        android:id="@+id/star_yay"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/tv_yay"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_minus30sdp"
                        android:layout_toEndOf="@+id/tv_yay"
                        android:src="@drawable/star_yellow" />


                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/star_yay"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/stamp_unlocked_successfully_text"
                        android:textAllCaps="false"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/tv_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/you_earn_some_pound"
                        android:textAllCaps="false"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_body"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/color_black_light"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_minus25sdp"
            android:src="@drawable/star_yellow" />

        <TextView
            android:id="@+id/tv_shop_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_main"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_minus20sdp"
            android:background="@drawable/light_red_filled_rounded_rect"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:paddingStart="@dimen/_35sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_35sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/shop_now"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>


</layout>