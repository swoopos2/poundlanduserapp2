<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">
        <!--venue detail-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/white_filled_app_border_curve_rect"
            android:padding="@dimen/_3sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/iv_venue_image"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_app_icon" />


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toEndOf="@+id/cv_image"
                android:padding="@dimen/_5sdp">


                <TextView
                    android:id="@+id/tv_venue_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text=""
                    android:textColor="@color/app_header_color"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_venue_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_venue_name"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=""
                    android:textColor="@color/color_black_light_extra"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

        </RelativeLayout>
        <!--Booking detail-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardBackgroundColor="@color/color_white"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="5dp">


            <LinearLayout
                android:id="@+id/ll_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/red_rect_border_round_drawable"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Yet to start"
                    android:textAllCaps="true"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tv_booking_summery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/booking_details"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">


                        <TextView
                            android:id="@+id/tv_booking_no_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/booking_no"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_booking_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:id="@+id/div_one"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tv_booking_no_lbl"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />

                        <TextView
                            android:id="@+id/tv_booking_date_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_one"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="Booking Time"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />


                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_one"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/color_light_red_extra"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:id="@+id/div_two"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tv_date"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />


                        <TextView
                            android:id="@+id/tv_no_of_guest_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_two"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="Total Guest"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_guest_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_two"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:id="@+id/div_three"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tv_guest_count"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />

                        <RelativeLayout
                            android:id="@+id/rl_total_amt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_three"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/tv_payable_amt_lbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingStart="@dimen/_8sdp"
                                android:text="@string/total_amount"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/div_four"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/rl_total_amt"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />

                        <LinearLayout
                            android:id="@+id/ll_customers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_four"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl_cust_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp">

                                <TextView
                                    android:id="@+id/tv_cust_name_lbl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:text="@string/customer_name"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="@dimen/_11sdp" />

                                <TextView
                                    android:id="@+id/tv_cust_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="@dimen/_11sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_cust_name2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/tv_cust_name_lbl2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:text="@string/customer_name"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="@dimen/_11sdp" />

                                <TextView
                                    android:id="@+id/tv_cust_name2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="@dimen/_11sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_cust_name3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/tv_cust_name_lbl3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:text="@string/customer_name"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="@dimen/_11sdp" />

                                <TextView
                                    android:id="@+id/tv_cust_name3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="@dimen/_11sdp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvViewMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/color_white"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="@string/view_all_customers"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:background="@drawable/app_color_blue_filled_ract"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>



                        <View
                            android:id="@+id/div_five"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/ll_customers"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />


                        <LinearLayout
                            android:id="@+id/ll_checkin_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_five"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="Checkin"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/color_light_red_extra" />


                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardBackgroundColor="@color/color_light_red"
                                    app:cardCornerRadius="@dimen/_12sdp"
                                    app:cardElevation="@dimen/_5sdp">

                                    <LinearLayout
                                        android:id="@+id/layout_main"
                                        android:layout_width="130dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_checkin_day"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/montserrat_medium"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/color_white" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/color_et_bg" />


                                        <TextView
                                            android:id="@+id/tv_checkin_date"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_checkin_month"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_checkin_year"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />


                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/color_et_bg" />

                                        <TextView
                                            android:id="@+id/tv_checkin_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_medium"
                                            android:gravity="center"
                                            android:paddingBottom="@dimen/_5sdp"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="Check out"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/color_light_red_extra" />


                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardBackgroundColor="@color/color_light_red"
                                    app:cardCornerRadius="@dimen/_12sdp"
                                    app:cardElevation="@dimen/_5sdp">

                                    <LinearLayout
                                        android:layout_width="130dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_checkout_day"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/montserrat_medium"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/color_white" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/color_et_bg" />


                                        <TextView
                                            android:id="@+id/tv_checkout_date"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_checkout_month"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_checkout_year"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />


                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/color_et_bg" />

                                        <TextView
                                            android:id="@+id/tv_checkout_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/color_white"
                                            android:fontFamily="@font/montserrat_medium"
                                            android:gravity="center"
                                            android:paddingBottom="@dimen/_5sdp"
                                            android:text=""
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/color_black_light"
                                            android:textStyle="normal" />


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_qr_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:id="@+id/iv_qr_image"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_5sdp"
                            android:adjustViewBounds="true" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- order Food and drink -->

                <LinearLayout
                    android:id="@+id/ll_order_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order_food_drink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/light_red_filled_rounded_rect"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Order Food &amp; Drink"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_self_check_in"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/light_red_filled_rounded_rect"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Self Checkin"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cancel_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancel_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/dark_red_filled_rounded_rect"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/cancel_booking"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_make_new_booking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/app_colored_filled_rounded_rect"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Make New Booking"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_master"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/_2sdp" />

        </LinearLayout>


        <View
            android:id="@+id/v_div"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />


    </LinearLayout>


</layout>