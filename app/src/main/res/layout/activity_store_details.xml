<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Header-->
            <RelativeLayout
                android:id="@+id/rl_top"
                style="@style/app_color_strip">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/color_white" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/iv_back"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:text="@string/venue_details"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/iv_filter"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/tv_cart_count"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_filter"
                    android:visibility="invisible"
                />

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_shopping_cart"
                    />

                <TextView
                    android:id="@+id/tv_cart_count"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@drawable/circle_red_drawable"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <!--Search-->
            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_3sdp"
                android:layout_below="@+id/rl_top">

                <EditText
                    android:id="@+id/et_search_now_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/grey_filled_rounded_rect"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/black_overlay"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/product_search"
                    android:imeOptions="actionSearch"
                    android:inputType="textAutoCorrect"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_search_now_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_red_drawable_40s"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_right_arrow" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_toStartOf="@+id/iv_search_now_header"
                    android:padding="@dimen/_10sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone"
                    app:tint="@color/color_light_red_extra" />

            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_search">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_minus1sdp">

                    <RelativeLayout
                        android:id="@+id/view_pager_venue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginBottom="@dimen/_5sdp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_230sdp" />

                        <TextView
                            android:id="@+id/tv_timing_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_11sdp" />

                        <RelativeLayout
                            android:id="@+id/layout_venue_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/app_header_color_trans"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tv_venue_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/rb_rating"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:text=""
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_13sdp" />

                            <RatingBar
                                android:id="@+id/rb_rating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_toStartOf="@+id/tv_rating_count_card"
                                android:backgroundTint="@color/dark_grey"
                                android:fitsSystemWindows="true"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressTint="@color/color_yellow"
                                android:rating="0.0"
                                android:stepSize=".5" />

                            <TextView
                                android:id="@+id/tv_rating_count_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_toStartOf="@+id/tv_distance_in_miles"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:text=""
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:id="@+id/tv_distance_in_miles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:drawableStart="@drawable/ic_location_nearby"
                                android:drawableTint="@color/color_white"
                                android:fontFamily="@font/montserrat_medium"
                                android:text=""
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:id="@+id/tv_venue_foods"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_venue_name"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_toStartOf="@+id/ll_call_now"
                                android:ellipsize="end"
                                android:textAllCaps="true"
                                android:fontFamily="@font/montserrat_regular"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_9sdp" />

                            <LinearLayout
                                android:id="@+id/ll_call_now"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_venue_name"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/white_filled_curved_rect"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_2sdp">

                                <ImageView
                                    android:id="@+id/iv_call"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:padding="@dimen/_3sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_call"
                                    app:tint="@color/app_header_color" />

                                <TextView
                                    android:id="@+id/tv_call_now"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="@string/call_now"
                                    android:textColor="@color/app_header_color"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/rl_timings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_venue_foods"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_toStartOf="@+id/ll_call_now"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_watch"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_watch"
                                    app:tint="@color/color_white" />

                                <TextView
                                    android:id="@+id/tv_opening_timing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/tv_closing_timing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/_10sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_down_arrow"
                                    app:tint="@color/color_white" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_footer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_timings"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_delivery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_filled_curved_rect"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:visibility="invisible">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_green_drawable_small">

                                        <ImageView
                                            android:id="@+id/iv_home_delivery"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_baseline_check_24" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_delivery"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/delivery"
                                        android:textColor="@color/app_header_color"
                                        android:textSize="@dimen/_9sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_collection"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_filled_curved_rect"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:visibility="invisible">


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_green_drawable_small">

                                        <ImageView
                                            android:id="@+id/iv_click_n_collect"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_baseline_check_24" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_click_collect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/collection"
                                        android:textColor="@color/app_header_color"
                                        android:textSize="@dimen/_9sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_same_day_delivery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_filled_curved_rect"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:visibility="gone">


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_green_drawable_small">

                                        <ImageView
                                            android:id="@+id/iv_same_day_delivery"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_baseline_check_24" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_same_day_delivery"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/same_day_delivery"
                                        android:textColor="@color/app_header_color"
                                        android:textSize="@dimen/_9sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_table"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_filled_curved_rect"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:visibility="gone">


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_green_drawable_small">

                                        <ImageView
                                            android:id="@+id/iv_table_icon"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_baseline_check_24" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_table"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/table"
                                        android:textColor="@color/app_header_color"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_book_a_table"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_footer"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:gravity="center">


                                <RelativeLayout
                                    android:id="@+id/rl_book_table"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/green_filled_rect"
                                    android:paddingStart="@dimen/_15sdp"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:id="@+id/iv_table"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        android:background="@drawable/circle_red_drawable_small">

                                        <ImageView
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_baseline_check_24" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_book_table"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_toEndOf="@+id/iv_table"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:paddingStart="@dimen/_5sdp"
                                        android:paddingTop="@dimen/_6sdp"
                                        android:paddingEnd="@dimen/_20sdp"
                                        android:paddingBottom="@dimen/_6sdp"
                                        android:text="@string/book_a_table"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/_10sdp" />
                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:visibility="gone"
                            app:tabBackground="@drawable/indicator_selector"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_favo"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite"
                        android:visibility="invisible"
                        app:tint="@color/hint_grey" />

                    <!--same day delivery timer-->
                    <RelativeLayout
                        android:id="@+id/rl_same_day_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_pager_venue"
                        android:layout_gravity="center"
                        android:background="@drawable/transparent_black_border_rect_low_opacity"
                        android:clickable="false"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_same_day_delivery_img"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_same_day_delivery" />

                        <TextView
                            android:id="@+id/tv_same_day_delivery_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/iv_same_day_delivery_img"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start|center"
                            android:text="@string/same_day_delivery"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_delivery_within"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_same_day_delivery_img"
                            android:layout_marginStart="@dimen/_35sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/get_delivery"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_delivery_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_same_day_delivery_img"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/tv_delivery_within"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingTop="@dimen/_1sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Today"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_toEndOf="@+id/tv_same_day_delivery_cost"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_order_within"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_3sdp"
                                android:text="@string/Order_within"
                                android:textColor="@color/color_black_light_extra"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:id="@+id/tv_expiry_shipping_day"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/transparent_black_border_rect_low_opacity"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:textColor="@color/app_header_color"
                                android:textSize="@dimen/_9sdp" />
                        </LinearLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        style="@style/parentLayout"
                        android:layout_below="@+id/rl_same_day_delivery"
                        android:layout_marginTop="@dimen/_5sdp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_category_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/_10sdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/layout_cell_single_store_category_list" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_product_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rv_category_list"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:clipToPadding="false"
                            android:paddingBottom="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/tv_no_data_found"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_medium_italic"
                            android:maxLines="1"
                            android:text="@string/no_data_found"
                            android:textColor="@color/light_green"
                            android:textSize="@dimen/_18sdp"
                            android:visibility="gone" />


                    </RelativeLayout>


                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>

            <!--Floating button-->
            <RelativeLayout
                android:id="@+id/rl_fram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:padding="@dimen/_1sdp">

                <RelativeLayout
                    android:id="@+id/rl_fab"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentEnd="true">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_icon__cart"
                        app:backgroundTint="@color/app_color_2"
                        app:fabSize="auto" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_prod_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_minus16sdp"
                    android:layout_toStartOf="@+id/rl_fab"
                    android:background="@drawable/circle2_black_drawable"
                    android:elevation="5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_7sdp" />
            </RelativeLayout>


        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>