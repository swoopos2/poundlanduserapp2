<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/success_rounded_rect"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/ic_subtract">

            <!--  <androidx.cardview.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  app:cardBackgroundColor="@color/color_white"
                  app:cardCornerRadius="@dimen/_15sdp"
                  app:cardElevation="4dp">-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">


                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_minus35sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_congrats" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_image"
                    android:layout_marginTop="@dimen/_minus20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_booking_summery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/booking_details"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/iv_image_venue"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_app_icon" />

                    <RelativeLayout
                        android:id="@+id/rl_order_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_5sdp">


                        <TextView
                            android:id="@+id/tv_booking_date_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/booking_no"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_booking_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:id="@+id/div_one"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tv_booking_date_lbl"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />

                        <RelativeLayout
                            android:id="@+id/rl_booking_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_one"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingStart="@dimen/_8sdp"
                                android:text="@string/booking_time"
                                android:textColor="@color/black_overlay"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_booking_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/color_light_red"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/div_two"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/rl_booking_time"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />

                        <TextView
                            android:id="@+id/tv_no_of_guest_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_two"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="Total Guest"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_no_of_guest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_two"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:id="@+id/div_three"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tv_no_of_guest_lbl"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />


                        <RelativeLayout
                            android:id="@+id/rl_total_amt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_three"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/tv_payable_amt_lbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingStart="@dimen/_8sdp"
                                android:text="@string/total_amount"
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_payable_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/color_black_light"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>


                        <View
                            android:id="@+id/div_four"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/rl_total_amt"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:alpha=".6"
                            android:background="@color/color_et_bg_trans" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_view_booking"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/app_colored_filled_rounded_rect"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="@string/view_booking_history"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</layout>