<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/rl_arriving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:baselineAligned="false"
        android:gravity="center">
        <!-- android:background="@drawable/circle_white_strok_grey"
         android:background="@drawable/circle_app_color"
         android:background="@drawable/ic_block"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_modifier"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_app_color" />
            <ImageView
                android:id="@+id/iv_modifier_check"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_check_24" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_modifier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="name"
            android:maxLength="30"
            android:ellipsize="end"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_11sdp" />

        <!--android:background="@drawable/circle_white_strok_grey"-->
    </RelativeLayout>


</layout>