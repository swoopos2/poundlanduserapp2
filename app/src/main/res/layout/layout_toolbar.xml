<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetStartWithNavigation="0dp"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_app_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="@dimen/_120sdp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/app_logo_poundland" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/iv_app_logo"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:orientation="vertical">

                   <!-- <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/Swoope"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />
-->
                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/local"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp" />-->
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_pay_n_go"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/iv_filter"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_qr_scan"
                    app:tint="@color/app_color_2" />

                <ImageView
                    android:id="@+id/iv_filter"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/iv_notification"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_filter"
                    app:tint="@color/app_color_2" />

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/iv_cart"
                    android:src="@drawable/ic_notifications"
                    app:tint="@color/app_color_2" />

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="@color/app_color_2" />

                <TextView
                    android:id="@+id/tv_cart_count"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@drawable/circle_red_drawable"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="invisible" />

                <!--<ImageView
                    android:id="@+id/iv_filter"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_mobile"
                    android:tint="@color/color_white"
                    android:visibility=""/>-->
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

</layout>