<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_top"
            style="@style/app_color_strip">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"
                app:tint="@color/color_white" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/iv_back"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="1"
                android:text="@string/venue_details"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@+id/tv_cart_count"
                android:src="@drawable/ic_notifications"
                />

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_shopping_cart"
               />

            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/circle_red_drawable"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_8sdp"
                android:visibility="invisible" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/view_pager_venue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_search"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:tabBackground="@drawable/indicator_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_favo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/rl_search"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_favorite"
                    app:tint="@color/hint_grey" />

                <!--//////////////////   UPR VENUE INFO   ////////////////////////////////-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_favo"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="@dimen/_5sdp">

                    <RelativeLayout
                        style="@style/parentLayout"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/tv_venue_name_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text=""
                            android:textColor="@color/hint_grey"
                            android:textSize="@dimen/_16sdp" />

                        <RatingBar
                            android:id="@+id/rb_rating_card"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_venue_name_card"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:backgroundTint="@color/dark_grey"
                            android:fitsSystemWindows="true"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="@color/color_yellow"
                            android:rating="0.0"
                            android:stepSize=".5" />

                        <TextView
                            android:id="@+id/tv_rating_count_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_venue_name_card"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/rb_rating_card"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/tab_unselected_color"
                            android:textSize="@dimen/_9sdp" />


                        <ImageView
                            android:id="@+id/iv_home_delivery_card"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_below="@+id/tv_venue_name_card"
                            android:layout_alignParentEnd="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_home_delivery"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_click_n_collect_card"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_below="@+id/tv_venue_name_card"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/iv_home_delivery_card"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_click_n_collect_order"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_same_day_delivery_card"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_below="@+id/tv_venue_name_card"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/iv_click_n_collect_card"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_same_day_delivery"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/tv_venue_foods_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_rating_count_card"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/tab_unselected_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_timing_status_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_venue_foods_card"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_distance_in_miles_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_venue_foods_card"
                            android:layout_marginStart="19dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:drawableStart="@drawable/ic_location_nearby"
                            android:drawableTint="@color/dark_blue"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="sssss"
                            android:textColor="@color/tab_unselected_color"
                            android:textSize="@dimen/_11sdp" />

                        <!--  <ImageView
                              android:layout_width="@dimen/_25sdp"
                              android:layout_height="@dimen/_25sdp"
                              android:layout_below="@+id/tv_venue_foods_card"
                              android:layout_marginStart="@dimen/_15sdp"
                              android:layout_marginTop="@dimen/_5sdp"
                              android:layout_toEndOf="@+id/tv_distance_in_miles_card"
                              android:orientation="vertical"
                              android:scaleType="fitXY"
                              android:src="@drawable/ic_location_nearby"
                              android:tint="@color/app_header_color" />-->


                        <View
                            android:id="@+id/view_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tv_timing_status_card"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:alpha=".8"
                            android:background="@color/border_color" />

                        <LinearLayout
                            android:id="@+id/rl_timings_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_divider"
                            android:layout_toStartOf="@+id/tv_mobile_card"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_opening_timing_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_watch"
                                android:drawablePadding="@dimen/_1sdp"
                                android:drawableTint="@color/dark_blue"
                                android:fontFamily="@font/montserrat_regular"
                                android:text=""
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/tab_unselected_color"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tv_closing_timing_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text=""
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/tab_unselected_color"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_mobile_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_divider"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_alignParentEnd="true"
                            android:drawableStart="@drawable/ic_telephone_call"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=""
                            android:textColor="@color/tab_unselected_color"
                            android:textSize="@dimen/_10sdp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_timings_card"
                            >

                            <ImageView
                                android:id="@+id/iv_store"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_alignParentStart="true"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/_1sdp"
                                android:src="@drawable/ic_home_address" />

                            <TextView
                                android:id="@+id/tv_address_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/iv_message_card"
                                android:layout_toEndOf="@+id/iv_store"
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_centerInParent="true"
                                android:text=""
                                android:textColor="@color/tab_unselected_color"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/iv_message_card"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_envelope"
                                android:tint="@color/dark_blue" />


                        </RelativeLayout>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!--//////////////////   INNER VENUE INFO   ////////////////////////////////-->
                <RelativeLayout
                    android:id="@+id/rl_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pager_venue"
                    android:layout_marginBottom="@dimen/_minus40sdp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_venue_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_14sdp" />

                    <!--<ImageView
                        android:id="@+id/iv_same_day_delivery"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/iv_home_delivery"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_same_day_delivery"
                        android:visibility="invisible" />-->
                    <ImageView
                        android:id="@+id/iv_home_delivery"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/iv_click_n_collect"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_home_delivery"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/iv_click_n_collect"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_click_n_collect_order"
                        android:visibility="invisible" />

                    <RatingBar
                        android:id="@+id/rb_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_venue_name"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:backgroundTint="@color/dark_grey"
                        android:fitsSystemWindows="true"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="@color/color_yellow"
                        android:rating="0.0"
                        android:stepSize=".5" />

                    <TextView
                        android:id="@+id/tv_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_venue_name"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/rb_rating"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/tab_unselected_color"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_venue_name"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_telephone_call"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_venue_foods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_rating_count"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingTop="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_venue_foods"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingTop="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_timings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_address"
                        android:layout_toStartOf="@+id/tv_collection_delivery"
                        android:fontFamily="@font/montserrat_bold"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/Timings"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_collection_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_address"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/collect_deliver"
                        android:textColor="@color/app_header_color"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_timing_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_timings"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/rl_timings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_timing_status"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_toStartOf="@+id/tv_min_order"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_opening_timing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_closing_timing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_min_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_timings"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_distance_in_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_min_order"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_location_nearby"
                        android:drawableTint="@color/app_header_color"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/ll_same_day_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_distance_in_miles"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_same_day_delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/light_green"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:text="@string/same_day_delivery"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_claim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_min_order"
                        android:layout_alignParentEnd="true"
                        android:background="@color/color_light_red"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:text="@string/claim_this_store"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/ll_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_same_day_delivery"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/color_et_bg"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp">

                        <LinearLayout
                            android:id="@+id/ll_mesage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:orientation="vertical"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_envelope"
                                android:tint="@color/dark_blue" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:text="@string/message"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"

                                android:orientation="vertical"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_telephone_call"
                                 />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:text="@string/phone"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_direction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:orientation="vertical"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_location_nearby"
                                android:tint="@color/dark_blue" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:paddingStart="@dimen/_5sdp"
                                android:text="@string/direction"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_main"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/_4sdp">

                    <RelativeLayout
                        style="@style/parentLayout"
                        android:layout_marginTop="@dimen/_5sdp">

                        <RelativeLayout
                            android:id="@+id/rl_offers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/app_header_color"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_location_near_you"
                                android:layout_width= "@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circle_red_drawable"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/ic_location_nearby" />

                            <TextView
                                android:id="@+id/tv_offer_found"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/offer_found"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/tv_top_offers_near_you_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_offer_found"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_deals_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_offers"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:clipToPadding="false"
                            android:paddingBottom="@dimen/_10sdp" />


                        <RelativeLayout
                            android:id="@+id/rl_categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rv_deals_list"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@color/app_header_color"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_location_near_you_cat"
                                android:layout_width= "@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circle_red_drawable"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/ic_location_nearby" />

                            <TextView
                                android:id="@+id/tv_categories_found"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/category_found"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/tv_top_categories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_categories_found"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_category_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_categories"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:clipToPadding="false"
                            android:paddingBottom="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rl_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rv_category_list"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/app_header_color"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_location_near_you_pro"
                                android:layout_width= "@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circle_red_drawable"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/ic_location_nearby" />

                            <TextView
                                android:id="@+id/tv_product_found"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/product_found"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/tv_top_products"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_product_found"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_product_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_products"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:clipToPadding="false"
                            android:paddingBottom="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/tv_no_data_found"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_medium_italic"
                            android:maxLines="1"
                            android:text="@string/no_data_found"
                            android:textColor="@color/light_green"
                            android:textSize="@dimen/_18sdp"
                            android:visibility="gone" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>